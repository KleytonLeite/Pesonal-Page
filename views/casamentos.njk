{% extends "layout.njk" %}

{% block head %}

    <title>Portfolio - Casamentos</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Casamentos</h1>
    </div>

    <section class="cards">
        <div class="card" id="xQs_CloLz1Y">
            <div class="card_image-container">
                <img src="https://img.youtube.com/vi/xQs_CloLz1Y/maxresdefault.jpg" alt="Encantus">
            </div>

            <div class="card_content">
                <p>Encanttu´s Recepções e Eventos</p>
            </div>

            <div class="card_info">
                <p>Video Promocional</p>
                <p class="card_data">Casamentos</p>
            </div>
        </div>
    </section>

    {% block modal %}

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>

    {% endblock modal %}

    <script src="/scripts.js"></script>

{% endblock %}